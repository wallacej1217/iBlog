<h1>Listing articles</h1>

<br>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary' %></td>
      <td><%= link_to 'edit', edit_article_path(article), class: 'btn btn-warning' %>
  </td>
  <td><%= link_to 'Destroy', article_path(article),
   method: :delete,
   data: {confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
    <% if user_signed_in? %>
      <li>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary')  %>
      </li>
    <% else %>
      <li>
      <%= link_to('Login', new_user_session_path, class: 'btn btn-primary')  %>
      </li>
    <% end %>

  <% end %>

</table>
